generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  // url = env("DATABASE_URL")
}

model Usuario {
  id     Int    @id @default(autoincrement())
  nome   String
  email  String @unique
  senha  String @unique
  funcao Role
}

model Mesa {
  id     Int        @id @default(autoincrement())
  numero Int
  status StatusMesa @default(LIVRE)

  criadoEm     DateTime  @default(now())
  atualizadoEm DateTime  @updatedAt
  Comanda      Comanda[]
}

model Produto {
  id        Int     @id @default(autoincrement())
  nome      String
  descricao String?
  preco     Float
  categoria String?

  criadoEm     DateTime @default(now())
  atualizadoEm DateTime @updatedAt
  Pedido       ItemPedido[]
}

model ItemPedido {
  id           Int          @id @default(autoincrement())
  pedidoId     Int
  pedido       Pedido       @relation(fields: [pedidoId], references: [id])
  
  produtoId    Int
  produto      Produto      @relation(fields: [produtoId], references: [id])

  quantidade   Int
  observacao   String?
  
  precoUnitario Float
  precoTotal    Float
}


model Comanda {
  id           Int           @id @default(autoincrement())
  cliente      String?
  mesaId       Int
  mesa         Mesa          @relation(fields: [mesaId], references: [id])
  pedidos      Pedido[]
  status       StatusComanda @default(ABERTA) // aberta | fechada
  criadoEm     DateTime      @default(now())
  atualizadoEm DateTime      @updatedAt
}

model Pedido {
  id           Int          @id @default(autoincrement())
  comandaId    Int
  comanda      Comanda      @relation(fields: [comandaId], references: [id])
  itens        ItemPedido[]
  status       StatusPedido @default(PREPARANDO) // pendente | pronto | entregue
  criadoEm     DateTime     @default(now())
  atualizadoEm DateTime     @updatedAt
}

enum Role {
  ADMIN
  GARCOM
  ATENDENTE
}

enum StatusPedido {
  PREPARANDO
  PRONTO
  ENTREGUE
}

enum StatusComanda {
  ABERTA
  FECHADA
}

enum StatusMesa {
  OCUPADA
  LIVRE
}
